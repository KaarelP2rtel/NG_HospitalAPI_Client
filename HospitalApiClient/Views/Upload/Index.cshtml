@using Microsoft.AspNetCore.Http
@model IFormFile

<div class="container">
    <form method="post" enctype="multipart/form-data" asp-controller="Upload" asp-action="File">
        <div class="form-group">
            <div class="col-lg-12">
                <h3>Upload a CSV file:</h3>
                <input type="file" name="file"/>
            </div>
        </div>
        <div class="col-lg-2"></div>
        <div class="form-group">
            <div class="col-lg-1">
                <input type="submit" value="Upload" class="btn btn-primary" />
            </div>
        </div>
    </form>

   
</div>
<div class="container">
    <form>
        <h3> Clear the database</h3>
        <button asp-action="Clear" asp-controller="Upload" class="btn btn-danger glyphicon glyphicon-trash" />
    </form>
</div>